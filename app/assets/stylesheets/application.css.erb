@font-face {
	font-family: 'Anodyne'; 
	src: url('<%= asset_path("Anodyne.otf") %> ');
}

@font-face {
	font-family: 'Quicksand_Book'; 
	src: url('<%= asset_path("Quicksand_Book.otf") %> ');
}

body {
	background-image:url('<%= asset_path("background.png") %> ');
	background-size: 400px;
	background-repeat: repeat-x;
    background-attachment: fixed;
    background-position: bottom;
	
	width: 100%;
	margin: 0 auto;
}

a:link, a:visited, a:active {
	font-family: Anodyne, sans-serif;
	color: #35264f;
	text-decoration: none;
}

a:hover {
	color: #b2a8b5;
}

input[type=text] {
	border-style: none none dashed none;
	border-width: 1px;
	margin: 15px 0 0 0;
}

textarea {
	border-style: dashed;
	border-width: 1px;
	width: 75%;
	margin: 5px 0 0 0;
}

input[type=submit] {
	font-family: Quicksand_Book, sans-serif;
	text-transform: uppercase;
	letter-spacing: 1.5px;
	line-height: 150%;
	margin: 0 0 15px 0;
}

ul {
	list-style-type:none;
}

.alert {
	border-style: dashed;
	border-width: 1px;
	padding: 3px 3px 3px 3px;
}

.break_bottom {
	margin: 0 0 35px 0;
}

.center {
    margin-left: auto;
    margin-right: auto;
	text-align: center;
}

.left {
    text-align: left;
	padding: 5% 10% 5% 25% !important;;
}

.field_with_errors { 
	display: inline; 
}

.footer {	
	position:fixed;
	left:0px;
	bottom:0px;
	height:30px;
	width:100%;
}

.full_width {
    width: 100%;
}

.hidden {
	display: none;
}

.info {
	margin: 15px 0 15px 0; 
	padding: 5% 10% 5% 10%;
}

.logo {
	margin-top: 35px;
	width: 175px;
}

.major_block {
	margin-top: 15px;
	width: 75%;
}

.major_link {
	font-size: 35px;
}

.text {
	font-family: Quicksand_Book, sans-serif;
	text-transform: uppercase;
	letter-spacing: 1.5px;
	line-height: 150%;
	color: 35264f;
}

.text_link {
	font-size: 100%;
}

.transparent {
  background:#7f7f7f;
  background:rgba(255,255,255,0.85);
}

/* tablets */
@media only screen 
and (min-width : 569px) 
and (max-width : 1024px)  { 
	.left {
		padding: 5% 10% 5% 20% !important;
	}
}

/* mobile phones */
@media only screen  
and (max-width : 568px) { 
	.logo {
		width: 50%;
	}
	
	.left {
		padding: 1% 0% 1% 0% !important;;
	}
	
	.info {
		padding: 0 0 0 0;
	}
}