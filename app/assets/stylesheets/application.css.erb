 @font-face {
	font-family: 'Anodyne'; 
	src: url('<%= asset_path("this is different.otf") %> ');
}

body {
	background-image:url('<%= asset_path("background.png") %> ');
	background-size: 100%;
	background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: bottom;
	
	width: 100%;
	margin: 0 auto;
}

a:link, a:visited, a:active {
	font-family: Anodyne, serif;
	color: #35264f;
	text-decoration: none;
	font-size: 35px;
}

a:hover {
	color: #b2a8b5;
}

.center {
    margin-left: auto;
    margin-right: auto;
    width: 50%;
	text-align: center;
}

.full_width {
    width: 100%;
}

.major_links {
	margin-top: 15px;
}

.info {
	font-family: sans-serif;
	color: 35264f;
}

.transparent {
  background:#7f7f7f;
  background:rgba(255,255,255,0.5);
}

.hidden {
	display: none;
}

